<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/css/card.css">
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <%- include('./includes/navigation.ejs') %>
    <main class="container">

        <article class="card post-item">
            <header class="card__header card__flex">
                    <img src="<%= userImg  %>" alt="" class="card__userpic">
                    <div>
                        <h3 class="post__title">
                            <%= post.title %>
                        </h3>
                        <h4>by <%= post.author  %> </h4>
                        <h5>Created: <%= post.createdAt.toISOString().slice(0,-5).split('T').map(item => {
                            if (item.indexOf('-') > 0) {
                              item = item.split('-').reverse().join('-');
                            }
                            return item;
                          }).join(' at ')  %></h5>
                        <% if (post.updatedAt) { %>
                        <h5>Updated: <%= post.updatedAt.toISOString().slice(0,-5).split('T').map(item => {
                            if (item.indexOf('-') > 0) {
                              item = item.split('-').reverse().join('-');
                            }
                            return item;
                          }).join(' at ')  %></h5>
                        <% } %>
                    </div>
            </header>

            <div class="card__content">
                <p >
                    <%= post.text %>
                </p>
            </div>
            <div class="card__actions">
                
                <% if (isAuthenticated && viewedByAuthor) { %>
                <a href="/edit-post/<%= post._id %>" class="btn warning">Edit</a>
                <form action="/delete-post" method="POST">
                    <input type="hidden" value="<%= post._id %>" name="postId" >
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <button class="btn danger" type="submit">Delete</button>
                </form>
                <% } %>
                <div class="card__likes">
                    <i class="fa fa-thumbs-up" aria-hidden="true"></i>
                    <span class="card__likes-count">2</span>
                </div>
            </div>

            <div class="card__comments container">
                <h3>Comments</h3><hr>
                <% if (isAuthenticated) { %>
                <form class="post-form" action="/add-comment/<%= post._id %>" method="POST">
                    <div class="form-control">
                        <label for="comment">Your comment</label>
                        <textarea name="comment" id="comment" rows="5"></textarea>
                    </div>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <button class="btn" type="submit">Publish</button>
                </form>
                <% } %>
                <div class="card__comments-list">
                    <% comments.forEach(com => { %>
                        <article class="card post-item">
                            <header class="card__header card__flex">
                                <img src="<%= com.userId.imageUrl %>" alt="" class="card__userpic">
                                <div>
                                    <h4>by <%= com.userId.name  %> </h4>
                                    <h5>Submitted <%= com.createdAt.toISOString().slice(0,-5).split('T').map(item => {
                                        if (item.indexOf('-') > 0) {
                                          item = item.split('-').reverse().join('-');
                                        }
                                        return item;
                                      }).join(' at ')  %></h5>
                                </div>
                            </header>
        
                            <div class="card__content">
        
                                <p class="post__description">
                                    <%= com.comment  %> 
                                </p>
                            </div>
                        </article>
                    <% }) %>
                </div>
            </div>
        </article>

    </main>
    <%- include('./includes/scroll.ejs') %>
    <%- include('./includes/end.ejs') %>