<body>
    <%- include('./includes/navigation.ejs') %>

    <main class="container">
        <h2>My posts:</h2>
        <ul>
            <% if (posts.length > 0) { 
                    posts.map(p => { %>
                <div>
                    <h3><%= p.title %></h3>
                    <h5><%= p.createdAt %></h5>
                    <div>
                        <%= p.text %>
                    </div>
                </div>
            <% }) } else { %>
                <div> No posts found for this user</div>
            <% }  %>
        </ul>
    </main>
<%- include('./includes/end.ejs') %>